.myInput{
  border: 0;
  width: 80%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.titleInput{
  border-bottom: 1px solid #f4d03f;
}
.mypicker{
  border: 1px solid #f4d03f;
  background: #f4d03f;
  border-radius: 20rpx;
  font-size: 12px;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: white;
  display: inline-block;
  margin-right: 10rpx;
}
.mytext{
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  display: inline-block;
  border-bottom: 1px solid #f4d03f;

}
.myButton{
  background: #f4d03f;
  color: white;
  width: 70%;
}